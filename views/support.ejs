<!-- HTML for the support page -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../assets/css/style.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
    <title>Support | Dizcuss</title>
    <style>
        body {
            background: url(../assets/photos/svg-bg3.svg);
            background-size: cover;
            background-position: right;
        }

        .contact-form-container {
            position: fixed;
            top: 50%;
            display: grid;
            left: 50%;
            transform: translate(-50%, -50%);
            justify-content: center;
        }

        .contact-form {
            padding: 30px 40px;
            /* background-color: #ffffff; */
            border-radius: 12px;
            width: min(500px, 100%);
            margin: auto;
            backdrop-filter: blur(25px) saturate(200%);
            -webkit-backdrop-filter: blur(25px) saturate(200%);
            background-color: rgba(17, 25, 40, 0.244);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
        }

        .contact-form select {
            display: block;
            width: 100%;
        }

        .contact-form textarea {
            resize: none;
        }

        .contact-form .form-input,
        .form-text-area,
        select {
            background-color: #f0f4f5;
            padding: 10px;
            font-size: 15px;
            margin: 5px 0;
            width: 100%;
            border-radius: 5px;
            outline: none;
            border: 1px solid transparent;
        }

        .contact-form .form-text-area {
            background-color: #f0f4f5;
            height: auto;
            padding-left: 16px;
        }

        .contact-form .form-control::placeholder {
            color: #aeb4b9;
            font-weight: 500;
            opacity: 1;
        }

        .contact-form .form-control:-ms-input-placeholder {
            color: #aeb4b9;
            font-weight: 500;
        }

        .contact-form .form-control::-ms-input-placeholder {
            color: #aeb4b9;
            font-weight: 500;
        }

        .contact-form .form-control:focus {
            border-color: var(--yellow);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.07), 0 0 8px #f33fb0;
        }

        .contact-form .title {
            text-align: center;
            font-size: 24px;
            font-weight: 500;
        }

        .contact-form .description {
            color: #c9c9c9;
            font-size: 14px;
            text-align: center;
            margin: 7px 0;
        }

        .contact-form .submit-button-wrapper {
            text-align: center;
        }

        .contact-form .submit-button-wrapper input {
            border: none;
            border-radius: 4px;
            background-color: var(--yellow);
            color: var(--dark);
            text-transform: uppercase;
            padding: 10px 60px;
            font-weight: 500;
            letter-spacing: 2px;
            cursor: pointer;
        }

        .contact-form .submit-button-wrapper input:hover {
            opacity: .7;
        }
    </style>
</head>

<body>
    <%- include('sidebar', { currentPage: 'Support' }) %>

        <div class="home-container contact-form-container">

            <!-- Support request form -->
            <div>
                <div class="contact-form-wrapper d-flex justify-content-center">
                    <form action="/support/submit" method="post" class="contact-form" id="supportForm">
                        <h5 class="title">Contact us</h5>
                        <p class="description">Feel free to contact us if you need any assistance, any help or another
                            question.
                        </p>
                        <div>
                            <label for="type">Type:</label>
                            <select name="type" id="type">
                                <option value="Feedback">Feedback</option>
                                <option value="Contact">Contact</option>
                                <option value="Complaint">Complaint</option>
                            </select>
                        </div>
                        <div>
                            <textarea type="text" class="form-control rounded border-white mb-3 form-input" rows="5"
                                cols="30" name="content" id="content" placeholder="Message" required></textarea>
                        </div>
                        <div>
                            <input type="email" class="form-control rounded border-white mb-3 form-input"
                                name="contactInfo" id="contactInfo" placeholder="Email" required>
                        </div>
                        <div class="submit-button-wrapper">
                            <input type="submit" value="Send">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            const supportForm = document.getElementById('supportForm');
            const messageElement = document.getElementById('message');

            supportForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                // Serialize form data into a JSON object
                const formData = new FormData(supportForm);
                const formDataJSON = {};
                formData.forEach((value, key) => {
                    formDataJSON[key] = value;
                });

                supportForm.reset();
                // Send a POST request to the server
                try {
                    const response = await fetch('/support/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formDataJSON),
                    });
                    if (response.ok) {
                        showToast("Thanks for messaging!");
                    } else {
                        showToast("Something went wrong!");
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });

        </script>
        <script src="../assets/js/app.js" defer></script>
</body>

</html>