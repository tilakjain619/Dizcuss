<body>
    <nav class="navbar" id="main-navbar">
        <span class="navbar-toggle" id="js-navbar-toggle">
            <i class="fas fa-bars"></i>
        </span>
        <a href="#" class="logo"><img src="./assets/photos/brand/light-logo.svg" alt="Dizcuss Logo"></a>
        <ul class="main-nav" id="js-menu">
            <li>
                <a href="/home" class="nav-links">Community</a>
            </li>
            <li>
                <a href="/signup" class="nav-links">Get Started</a>
            </li>
            <li>
                <a href="/login" class="nav-links">Sign in</a>
            </li>
        </ul>
