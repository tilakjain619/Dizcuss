{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "server.js"
      },
      {
        "src": "/views/.*\\.ejs$",
        "dest": "public$1"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1",
        "headers": {
          "Cache-Control": "public, max-age=3600"
        }
      }
    ],
    "public": {
      "rewrites": [
        {
          "source": "/(.*)",
          "destination": "/$1"
        }
      ]
    }
  }
  